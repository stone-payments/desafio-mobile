<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leonardo.desafiomobile.Activities.Transacao">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Informação de Pagamento"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/tvT"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="Nº Cartão"
                android:gravity="center"/>

            <EditText
                android:id="@+id/nCartaoT"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvT2"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="Valor"
                android:gravity="center" />

            <TextView
                android:id="@+id/valorT"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvT3"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="CVV"
                android:textAlignment="center"
                android:gravity="center" />

            <EditText
                android:id="@+id/cvvT"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:maxLength="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvT4"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="Nome do Titular"
                android:textAlignment="center"
                android:gravity="center" />

            <EditText
                android:id="@+id/nomeTitularT"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvT5"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Data de Vencimento" />

            <EditText
                android:id="@+id/validadeT"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="date" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/confirmarT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:text="Confirmar Compra"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/retornoT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retornar"
        android:gravity="center"
        android:layout_alignBaseline="@+id/confirmarT"
        android:layout_alignBottom="@+id/confirmarT"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp" />

</RelativeLayout>
